{
  "name": "@aiera/components",
  "version": "0.0.1",
  "description": "Aiera Component Library",
  "author": "Aiera, Inc.",
  "license": "CC-BY-NC-ND-4.0",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build:watch:docs": "docz dev --typescript --port 3003",
    "build:docs": "docz build --typescript",
    "build:lib": "tsc -p tsconfig.json",
    "build:watch:lib": "tsc -p tsconfig.json --watch",
    "build": "concurrently npm:build:*",
    "build:watch": "concurrently npm:build:watch:*",
    "lint": "eslint src/**",
    "lint:fix": "eslint src/** --fix",
    "test": "echo \"Error: run tests from root\" && exit 1"
  },
  "devDependencies": {
    "@types/react": "^17.0.14",
    "docz": "^2.3.1"
  },
  "dependencies": {
    "react": "17.0.2",
    "react-dom": "17.0.2"
  }
}
