{
    "name": "aiera-client-sdk",
    "version": "0.0.1",
    "description": "The Aiera Client SDK",
    "author": "Aiera, Inc.",
    "license": "CC-BY-NC-ND-4.0",
    "main": "index.js",
    "scripts": {
        "build": "npm run clean && concurrently -k npm:build:lib:*",
        "build:watch": "concurrently -k npm:build:watch:* npm:test:watch npm:serve",
        "build:docs": "typedoc",
        "build:watch:docs": "typedoc --watch --preserveWatchOutput --out build/dev/docs",
        "build:lib:js": "npm run ts src/dev/build.ts",
        "build:lib:css": "postcss --verbose 'src/**/*.css' --base src --dir build",
        "build:watch:lib:js": "npm run ts src/dev/build.ts -- --watch",
        "build:watch:lib:css": "postcss --verbose --watch 'src/**/*.css' --base src --dir build",
        "build:lib:types": "graphql-codegen -c .codegen.js && tsc --emitDeclarationOnly",
        "build:watch:lib:types:tsc": "tsc --emitDeclarationOnly --watch --incremental --pretty --preserveWatchOutput",
        "build:watch:lib:types:gql": "graphql-codegen -c .codegen.js --watch",
        "clean": "rimraf -rf build/*",
        "serve": "esbuild --tsconfig=tsconfig.bundle.json --bundle --servedir=build --outdir=build/bundle --serve build/dev/index.js",
        "lint": "eslint --no-error-on-unmatched-pattern 'src/**/*'",
        "lint:fix": "eslint --no-error-on-unmatched-pattern 'src/**/*' --fix",
        "start": "npm run clean && npm run build:watch",
        "test": "jest --config .jest/jest.config.js",
        "test:watch": "jest --config .jest/jest.config.js --watchAll",
        "ts": "node -r esbuild-register",
        "prepare": "husky install",
        "pre-commit": "npm run build:lib:types && concurrently lint-staged npm:test"
    },
    "devDependencies": {
        "@graphql-codegen/add": "^3.0.0",
        "@graphql-codegen/cli": "^2.0.1",
        "@graphql-codegen/typescript": "^2.0.0",
        "@graphql-codegen/typescript-operations": "^2.0.1",
        "@graphql-codegen/typescript-urql": "^3.0.0",
        "@testing-library/jest-dom": "^5.14.1",
        "@testing-library/react": "^12.0.0",
        "@types/jest": "^27.0.0",
        "@types/react": "^17.0.14",
        "@types/react-dom": "^17.0.9",
        "@typescript-eslint/eslint-plugin": "^4.28.4",
        "@typescript-eslint/parser": "^4.28.4",
        "autoprefixer": "^10.3.1",
        "chokidar": "^3.5.2",
        "concurrently": "^6.2.0",
        "cpy": "^8.0.0",
        "esbuild-register": "^3.0.0",
        "eslint": "^7.31.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-react": "^7.24.0",
        "husky": "^7.0.0",
        "jest": "^27.0.6",
        "lint-staged": "^11.0.1",
        "postcss": "^8.3.6",
        "postcss-cli": "^8.3.1",
        "prettier": "^2.3.2",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "rimraf": "^3.0.2",
        "tailwindcss": "^2.2.7",
        "typedoc": "^0.21.5",
        "typedoc-plugin-not-exported": "^0.1.6",
        "typedoc-plugin-param-names": "^3.0.1",
        "typescript": "^4.3.5",
        "yargs": "^17.0.1"
    },
    "dependencies": {
        "@urql/devtools": "2.0.3",
        "@urql/exchange-auth": "0.1.6",
        "@urql/exchange-graphcache": "4.2.1",
        "graphql": "15.5.1",
        "urql": "2.0.4"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "eslint --no-error-on-unmatched-pattern --fix"
        ]
    }
}
