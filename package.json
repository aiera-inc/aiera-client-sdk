{
    "name": "aiera-client-sdk",
    "version": "0.0.1",
    "description": "The Aiera Client SDK",
    "author": "Aiera, Inc.",
    "license": "CC-BY-NC-ND-4.0",
    "main": "index.js",
    "scripts": {
        "build": "yarn clean && concurrently npm:build:lib:* npm:build:docs",
        "build:watch": "concurrently npm:build:watch:* npm:test:watch",
        "build:docs": "docz build --typescript",
        "build:watch:docs": "docz dev --typescript --port 3003 | grep -i error",
        "build:lib:js": "etsc",
        "build:watch:lib:js": "nodemon -e ts,tsx,js,jsx,json --watch src/ --exec etsc",
        "build:lib:types": "tsc",
        "build:watch:lib:types": "tsc --watch --incremental --pretty --preserveWatchOutput",
        "clean": "rimraf -rf build/*",
        "lint": "eslint src/**",
        "lint:fix": "eslint src/** --fix",
        "start": "yarn clean && yarn build:watch",
        "test": "jest",
        "test:watch": "jest --watchAll",
        "prepare": "husky install",
        "pre-commit": "concurrently npm:lint npm:test"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^5.14.1",
        "@testing-library/react": "^12.0.0",
        "@types/jest": "^26.0.24",
        "@types/react": "17.0.14",
        "@types/react-dom": "^17.0.9",
        "@typescript-eslint/eslint-plugin": "^4.28.4",
        "@typescript-eslint/parser": "^4.28.4",
        "concurrently": "^6.2.0",
        "docz": "^2.3.1",
        "esbuild-node-tsc": "^1.6.0",
        "eslint": "^7.31.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-react": "^7.24.0",
        "husky": "^7.0.0",
        "jest": "^27.0.6",
        "lint-staged": "^11.0.1",
        "nodemon": "^2.0.12",
        "prettier": "^2.3.2",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "rimraf": "^3.0.2",
        "ts-jest": "^27.0.4",
        "typescript": "^4.3.5"
    },
    "dependencies": {}
}
