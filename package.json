{
    "name": "aiera-client-sdk",
    "version": "0.0.1",
    "description": "The Aiera Client SDK",
    "author": "Aiera, Inc.",
    "license": "CC-BY-NC-ND-4.0",
    "main": "index.js",
    "scripts": {
        "build": "yarn clean && concurrently npm:build:lib:*",
        "build:watch": "concurrently npm:build:watch:* npm:test:watch npm:serve",
        "build:lib:js": "yarn ts src/dev/build.ts",
        "build:lib:css": "postcss --verbose 'src/**/*.css' --base src --dir build",
        "build:watch:lib:js": "yarn ts src/dev/build.ts --watch",
        "build:watch:lib:css": "postcss --verbose --watch 'src/**/*.css' --base src --dir build",
        "build:lib:types": "tsc",
        "build:watch:lib:types": "tsc --watch --incremental --pretty --preserveWatchOutput",
        "clean": "rimraf -rf build/*",
        "serve": "esbuild --tsconfig=tsconfig.bundle.json --bundle --servedir=build --outdir=build/bundle --serve build/dev/index.js",
        "lint": "eslint --no-error-on-unmatched-pattern 'src/**'",
        "lint:fix": "eslint --no-error-on-unmatched-pattern 'src/**' --fix",
        "start": "yarn clean && yarn build:watch",
        "test": "jest --config .jest/jest.config.js",
        "test:watch": "jest --config .jest/jest.config.js --watchAll",
        "ts": "node -r esbuild-register",
        "prepare": "husky install",
        "pre-commit": "concurrently npm:lint npm:test"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^5.14.1",
        "@testing-library/react": "^12.0.0",
        "@types/jest": "^26.0.24",
        "@types/react": "17.0.14",
        "@types/react-dom": "^17.0.9",
        "@typescript-eslint/eslint-plugin": "^4.28.4",
        "@typescript-eslint/parser": "^4.28.4",
        "autoprefixer": "^10.3.1",
        "chokidar": "^3.5.2",
        "concurrently": "^6.2.0",
        "cpy": "^8.1.2",
        "esbuild-register": "^2.6.0",
        "eslint": "^7.31.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-react": "^7.24.0",
        "husky": "^7.0.0",
        "jest": "^27.0.6",
        "lint-staged": "^11.0.1",
        "postcss": "^8.3.6",
        "postcss-cli": "^8.3.1",
        "prettier": "^2.3.2",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "rimraf": "^3.0.2",
        "tailwindcss": "^2.2.7",
        "typescript": "^4.3.5",
        "yargs": "^17.0.1"
    },
    "dependencies": {}
}
